<h4>Create User Account</h4>

<form action="/signup" method="post">
  <div class="input-field">
    <input type="text" name="user[username]" id="username">
    <label for="username">Username</label>
  </div>
  <div class="input-field">
    <input type="password" name="user[password]" id="password">
    <label for="password">Password</label>
  </div>
  <div class="input-field">
    <input type="first name" name="user[first_name]" id="first_name">
    <label for="first name">First name</label>
  </div>
  
  <div class="input-field">
    <input type="last name" name="user[last_name]" id="last_name">
    <label for="Last name">Last name</label>
  </div>
  <div class="input-field">
    <input type="first name" name="user[first_name]" id="first_name">
    <label for="first name">First name</label>
  </div>

  <div class="input-field">
    <input type="email" name="user[email]" id="email">
    <label for="email">Email</label>
  </div>


  <input type="submit" value="Signup" class="btn-small">
</form>